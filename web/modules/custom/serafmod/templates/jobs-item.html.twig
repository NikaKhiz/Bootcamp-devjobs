{# jobs #}
<section class="container mx-auto my-30">
	<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-12 gap-y-20 ">
		{% for job in jobs %}
			<div class="py-12 px-10 shadow-lg rounded-md   capitalize relative  ">
				<div class="absolute -top-4 left-10">
					<img src="{{ job.logo }}" class="w-12 h-12 rounded-lg"></img>
				</div>
				<div class="flex items-center gap-x-6 py-1">
					<p class="text-gray">
						{{ job.date }}
					</p>
					<p class="text-gray">
						{{ job.job_type }}
					</p>
				</div>
				<div class="text-midnight dark:text-white dark:hover:text-darkgray text-2xl font-bold py-1 transition duration-300 ease-in-out">
					<a href="/node/{{ job.id}}">
						{{ job.job_name }}
					</a>
				</div>
				<div class="text-gray py-1">
					{{ job.company_name }}
				</div>

				<div class="text-violet pt-10 text-xl">
					{{ job.location }}
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="flex justify-center p-20">
		<button type="button" class="px-10 py-3 rounded-md bg-violet text-white hover:bg-lightviolet transition duration-300 ease-in-out">Load More</button>
	</div>
</section>
